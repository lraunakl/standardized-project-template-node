{
  "include": [
    "src/**/*.js",
    "routes/**/*.js",
    "models/**/*.js",
    "middleware/**/*.js"
  ],
  "exclude": [
    "tests/**",
    "coverage/**",
    "node_modules/**",
    "*.config.js",
    "**/node_modules/**"
  ],
  "reporter": ["text", "text-summary", "lcov", "html", "json"],
  "check-coverage": true,
  "lines": 70,
  "functions": 70,
  "branches": 65,
  "statements": 70,
  "cache": false,
  "all": true
}
